{
    "manifest_version": 3,
    "name": "Japanese Random",
    "description": "This is our sample extension for learning Japanese vocabulary",
    "version": "1.0",
    "action": {
        "default_popup": "index.html"
    },
    "background": {
        "service_worker": "src/background.js"
    },

    "permissions": [
        "storage",
        "activeTab"
    ],

    "content_scripts": [
        {
            "js": ["src/content.js"],
            "matches": ["<all_urls>"]
        }
    ]  
}
